// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------  BLOG  -----------
model Post {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  slug        String    @unique
  content     String    @db.Text
  excerpt     String?   @db.VarChar(500)
  category    String    @db.VarChar(100)
  cover       String?   @db.VarChar(500)
  published   Boolean   @default(true)
  publishedAt DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // ----- OPTIONAL: audit & SEO -----
  author      String?   @db.VarChar(255)   // email or name
  deletedAt   DateTime? @db.Timestamp()    // soft-delete
  metaTitle   String?   @db.VarChar(100)   // <title> override
  metaDesc    String?   @db.VarChar(160)   // meta description
  ogImage     String?   @db.VarChar(500)   // Open-Graph / Twitter card

  // ----- RELATION (optional) -----
  // authorId    String?   @db.Uuid
  // authorRel   User?     @relation(fields: [authorId], references: [id])

  @@unique([slug, deletedAt])   // allow slug re-use after soft-delete
  @@index([slug])
  @@index([category])
  @@index([publishedAt])
  @@index([deletedAt])
}

// -----------  EVENTS  -----------
model Event {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  slug        String    @unique
  description String?   @db.Text
  category    String    @db.VarChar(50) // 'Upcoming' | 'Past'
  cover       String?   @db.VarChar(500)
  location    String    @db.VarChar(255)
  startDate   DateTime
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // ----- OPTIONAL: audit & SEO -----
  author      String?   @db.VarChar(255)
  deletedAt   DateTime? @db.Timestamp()
  metaTitle   String?   @db.VarChar(100)
  metaDesc    String?   @db.VarChar(160)
  ogImage     String?   @db.VarChar(500)

  // ----- RELATION (optional) -----
  // authorId    String?   @db.Uuid
  // authorRel   User?     @relation(fields: [authorId], references: [id])

  @@unique([slug, deletedAt])
  @@index([slug])
  @@index([category])
  @@index([startDate])
  @@index([deletedAt])
}

// -----------  USERS  (Neon Auth)  -----------
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("user") // 'admin' | 'user'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ----- OPTIONAL: relations (uncomment when you want) -----
  // posts  Post[]
  // events Event[]
}